{
  "expo": {
    "name": "geoIdeaPlus",
    "slug": "geoIdeaPlus",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "GeoIdeaPlus necesita acceso a tu ubicación para marcarla y generar el enlace a Google Maps.",
        "NSCameraUsageDescription": "GeoIdeaPlus necesita acceso a la cámara para capturar una foto del lugar.",
        "NSPhotoLibraryUsageDescription": "GeoIdeaPlus guarda las fotos capturadas en tu dispositivo."
      },
      "bundleIdentifier": "com.kruzgroup.geoideaplus"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA"
      ],
      "package": "com.kruzgroup.geoideaplus"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font"
    ]
  }
}
